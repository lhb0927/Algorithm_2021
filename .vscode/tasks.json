{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with Clang",
            "type": "shell",
            "command": "clang++",
            "args": [
        "-std=c++17",
                  "-stdlib=libc++",
        "${file}",
                  "-o",
                  "${fileDirname}/${fileBasenameNoExtension}",
                  "--debug"
            ],
            "group": {
                  "kind": "build",
                  "isDefault": true
            }
         },
            {
                "label": "Open Terminal",
                "type": "shell",
                "command": "osascript -e 'tell application \"Terminal\"\ndo script \"echo hello\"\nend tell'",
                "problemMatcher": []
            }       
       ]
    }
    